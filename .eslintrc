{
  "extends": "rackt",
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "no-case-declarations": 0,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "semi": ["error", "always"],
    "no-class-assign": 1
  },
  "plugins": [
    "react"
  ]
}
